<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_itinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:numStars="5"
        android:scaleX="1.5"
        android:scaleY="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ico_transporte"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:visibility="gone"
            app:srcCompat="@drawable/transporte" />

        <ImageView
            android:id="@+id/ico_comida"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/restaurant" />

        <ImageView
            android:id="@+id/ico_deporte"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/deporte" />

        <ImageView
            android:id="@+id/ico_artesania"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/artesania" />

        <ImageView
            android:id="@+id/ico_esparcimiento"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/esparcimiento" />

        <ImageView
            android:id="@+id/ico_alojamiento"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/alojamiento" />

        <ImageView
            android:id="@+id/ico_tour"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/turismo" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>


    <!--android:layout_marginTop="5dp"-->

</LinearLayout>

