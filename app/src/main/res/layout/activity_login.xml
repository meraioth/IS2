<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:background="@drawable/piedradelaguila320x480"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.udec.ingsoftware.proyecto_is.view_model.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">

        <TextView
            android:text="@string/ingresar_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingresar_mail"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            android:background="@color/common_google_signin_btn_text_light_focused" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/mail"
            android:background="@drawable/edit_text_design"
            android:hint="@string/example_udec_cl" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingresar_contraseña"
            tools:text="Ingresar Contraseña"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/common_google_signin_btn_text_light_focused" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_design"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:hint="@string/password" />

        <Button
            android:text="@string/ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick = "login"
            android:id="@+id/button_login" />
    </LinearLayout>

</RelativeLayout>
