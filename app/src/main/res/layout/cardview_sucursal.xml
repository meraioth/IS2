<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sucursal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_sucursal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_margin" />

            <ImageView
                android:id="@+id/imagen_sucursal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_margin"
                android:layout_below="@id/titulo_sucursal">
                </ImageView>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>

