<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.udec.ingsoftware.proyecto_is.Fragmentos.BusquedaItinerario">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@drawable/shape_primary">

        <TextView
            android:id="@+id/estacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/estacion"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/estacion_spinner"
            android:popupTheme="@style/popupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:background="@drawable/shape_primary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/duracion_busqueda"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/duracion_spinner"
            android:popupTheme="@style/popupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:background="@drawable/shape_primary"
        android:orientation="vertical"
        android:textColor="@color/white">

        <TextView
            android:id="@+id/seguidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/seguidores"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_busqueda_avanzada_itinerario"
            android:layout_width="wrap_content"
            android:background="@drawable/shape"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Buscar"
            android:textColor="@color/white"/>
    </FrameLayout>


</LinearLayout>
